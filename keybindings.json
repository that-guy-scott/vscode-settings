[
    // ESC to focus editor, Shift+ESC to hide all panes
    {
        "key": "escape",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "!editorTextFocus && !vim.mode"
    },
    {
        "key": "shift+escape",
        "command": "workbench.action.closeSidebar"
    },
    {
        "key": "shift+escape",
        "command": "workbench.action.closeAuxiliaryBar"
    },
    {
        "key": "shift+escape",
        "command": "workbench.action.closePanel"
    },
    {
        "key": "shift+escape",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    // File explorer toggle (vim-like navigation with j/k/h/l when focused)
    {
        "key": "alt+1",
        "command": "workbench.view.explorer",
        "when": "!sideBarFocus"
    },
    {
        "key": "alt+1",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "sideBarFocus"
    },
    // IntelliJ-style navigation
    // Ctrl+N reserved for Copilot new chat session
    {
        "key": "ctrl+shift+n",
        "command": "workbench.action.quickOpen"
    },
    {
        "key": "ctrl+e",
        "command": "workbench.action.quickOpen"
    },
    {
        "key": "ctrl+shift+e",
        "command": "workbench.action.showAllEditorsByMostRecentlyUsed"
    },
    {
        "key": "shift shift",
        "command": "workbench.action.showCommands"
    },
    {
        "key": "ctrl+alt+left",
        "command": "workbench.action.navigateBack"
    },
    {
        "key": "ctrl+alt+right",
        "command": "workbench.action.navigateForward"
    },

    // IntelliJ-style code navigation
    {
        "key": "ctrl+b",
        "command": "editor.action.revealDefinition",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+b",
        "command": "workbench.action.toggleAuxiliaryBar"
    },
    {
        "key": "alt+f7",
        "command": "references-view.findReferences",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+f12",
        "command": "workbench.action.gotoSymbol"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.replaceInFiles"
    },

    // IntelliJ-style refactoring
    {
        "key": "shift+f6",
        "command": "editor.action.rename",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+shift+t",
        "command": "editor.action.refactor",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+v",
        "command": "editor.action.refactor",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+m",
        "command": "editor.action.refactor",
        "when": "editorTextFocus"
    },

    // IntelliJ-style editing
    {
        "key": "ctrl+d",
        "command": "editor.action.duplicateSelection",
        "when": "editorTextFocus && vim.mode == 'Insert'"
    },
    {
        "key": "ctrl+y",
        "command": "editor.action.deleteLines",
        "when": "editorTextFocus && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+shift+up",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+down",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+w",
        "command": "editor.action.smartSelect.expand",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+w",
        "command": "workbench.action.closeActiveEditor"
    },

    // IntelliJ-style code generation
    {
        "key": "alt+insert",
        "command": "editor.action.sourceAction",
        "when": "editorTextFocus"
    },
    // Ctrl+I reserved for Copilot inline chat
    // Ctrl+Shift+I reserved for Copilot agent mode

    // IntelliJ-style search
    {
        "key": "ctrl+shift+f",
        "command": "workbench.action.findInFiles"
    },
    {
        "key": "ctrl+shift+r",
        "command": "workbench.action.replaceInFiles"
    },
    {
        "key": "ctrl+f",
        "command": "actions.find",
        "when": "editorTextFocus && vim.mode == 'Insert'"
    },

    // IntelliJ-style run/debug
    {
        "key": "shift+f10",
        "command": "workbench.action.debug.run"
    },
    {
        "key": "shift+f9",
        "command": "workbench.action.debug.start"
    },
    {
        "key": "ctrl+f2",
        "command": "workbench.action.debug.stop"
    },
    {
        "key": "f8",
        "command": "workbench.action.debug.continue"
    },
    {
        "key": "f7",
        "command": "workbench.action.debug.stepInto"
    },

    // IntelliJ-style window management
    {
        "key": "alt+home",
        "command": "breadcrumbs.focusAndSelect"
    },
    {
        "key": "ctrl+tab",
        "command": "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
        "when": "!inEditorsPicker"
    },
    {
        "key": "ctrl+tab",
        "command": "workbench.action.quickOpenNavigateNextInEditorPicker",
        "when": "inEditorsPicker"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.quickOpenLeastRecentlyUsedEditorInGroup",
        "when": "!inEditorsPicker"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.quickOpenNavigatePreviousInEditorPicker",
        "when": "inEditorsPicker"
    },
    {
        "key": "ctrl+shift+f12",
        "command": "workbench.action.toggleMaximizedPanel"
    },

    // IntelliJ-style VCS/Git
    {
        "key": "ctrl+k",
        "command": "git.commitStaged",
        "when": "!editorTextFocus"
    },
    {
        "key": "alt+9",
        "command": "workbench.view.scm"
    },

    // IntelliJ-style tool windows (Alt+Number)
    {
        "key": "alt+0",
        "command": "claude-vscode.sidebar.open"
    },
    {
        "key": "alt+2",
        "command": "workbench.view.extension.bookmarks"
    },
    {
        "key": "alt+3",
        "command": "workbench.action.findInFiles"
    },
    {
        "key": "alt+4",
        "command": "workbench.action.debug.run"
    },
    {
        "key": "alt+5",
        "command": "workbench.view.debug"
    },
    {
        "key": "alt+7",
        "command": "outline.focus"
    },
    {
        "key": "alt+f12",
        "command": "workbench.action.terminal.toggleTerminal"
    },

    // IntelliJ-style bookmarks
    {
        "key": "f11",
        "command": "bookmarks.toggle",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+f11",
        "command": "bookmarks.list"
    },

    // Additional useful mappings
    {
        "key": "ctrl+shift+a",
        "command": "workbench.action.showCommands"
    },
    {
        "key": "ctrl+alt+l",
        "command": "editor.action.formatDocument",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+o",
        "command": "editor.action.organizeImports",
        "when": "editorTextFocus"
    }
]
