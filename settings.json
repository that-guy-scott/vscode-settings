{
    "keyboard.dispatch": "keyCode",
    "github.copilot.nextEditSuggestions.enabled": true,
    "workbench.startupEditor": "none",
    "claudeCode.preferredLocation": "sidebar",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontLigatures": true,
    "editor.fontFamily": "'DroidSansM Nerd Font', 'Droid Sans Mono', monospace",
    "editor.fontSize": 14,
    // Vim Extension Configuration
    "vim.leader": ";",
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.smartcase": true,
    "vim.timeout": 500,
    "vim.showmodename": true,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 200,
    // Vim Normal Mode Mappings
    "vim.normalModeKeyBindingsNonRecursive": [
        // Yank to end of line
        {
            "before": [
                "Y"
            ],
            "after": [
                "y",
                "$"
            ]
        },
        // Redo with U
        {
            "before": [
                "U"
            ],
            "after": [
                "<C-r>"
            ]
        },
        // Leader mappings - File Explorer & Windows
        {
            "before": [
                "<leader>",
                "1"
            ],
            "commands": [
                "workbench.view.explorer"
            ]
        },
        {
            "before": [
                "<leader>",
                "2"
            ],
            "commands": [
                "workbench.view.extension.bookmarks"
            ]
        },
        {
            "before": [
                "<leader>",
                "3"
            ],
            "commands": [
                "workbench.view.extension.todo-tree-view"
            ]
        },
        {
            "before": [
                "<leader>",
                "7"
            ],
            "commands": [
                "outline.focus"
            ]
        },
        {
            "before": [
                "<leader>",
                "8"
            ],
            "commands": [
                "workbench.action.toggleZenMode"
            ]
        },
        {
            "before": [
                "<leader>",
                "9"
            ],
            "commands": [
                "workbench.panel.chat.view.copilot.focus"
            ]
        },
        {
            "before": [
                "<leader>",
                "0"
            ],
            "commands": [
                "workbench.view.extension.github-copilot"
            ]
        },
        // Top row
        {
            "before": [
                "<leader>",
                "q"
            ],
            "commands": [
                "editor.action.showHover"
            ]
        },
        {
            "before": [
                "<leader>",
                "Q"
            ],
            "commands": [
                "editor.action.showHover"
            ]
        },
        {
            "before": [
                "<leader>",
                "w"
            ],
            "commands": [
                "workbench.action.gotoSymbol"
            ]
        },
        {
            "before": [
                "<leader>",
                "W"
            ],
            "commands": [
                ":w"
            ]
        },
        {
            "before": [
                "<leader>",
                "e"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<leader>",
                "E"
            ],
            "commands": [
                "workbench.action.showAllEditorsByMostRecentlyUsed"
            ]
        },
        {
            "before": [
                "<leader>",
                "r"
            ],
            "commands": [
                "workbench.action.debug.run"
            ]
        },
        {
            "before": [
                "<leader>",
                "R"
            ],
            "commands": [
                "workbench.action.showAllEditorsByMostRecentlyUsed"
            ]
        },
        {
            "before": [
                "<leader>",
                "t"
            ],
            "commands": [
                "workbench.action.terminal.toggleTerminal"
            ]
        },
        {
            "before": [
                "<leader>",
                "u"
            ],
            "after": [
                "<C-u>"
            ]
        },
        {
            "before": [
                "<leader>",
                "i"
            ],
            "commands": [
                "bookmarks.toggle"
            ]
        },
        {
            "before": [
                "<leader>",
                "o"
            ],
            "commands": [
                "workbench.action.files.openFile"
            ]
        },
        {
            "before": [
                "<leader>",
                "p"
            ],
            "commands": [
                "workbench.action.navigateBack"
            ]
        },
        {
            "before": [
                "<leader>",
                "P"
            ],
            "commands": [
                "workbench.action.toggleZenMode"
            ]
        },
        // Method navigation
        {
            "before": [
                "]",
                "]"
            ],
            "commands": [
                "editor.action.marker.next"
            ]
        },
        {
            "before": [
                "[",
                "["
            ],
            "commands": [
                "editor.action.marker.prev"
            ]
        },
        // Middle row
        {
            "before": [
                "<leader>",
                "<Esc>"
            ],
            "commands": [
                "workbench.action.closePanel",
                "workbench.action.closeSidebar"
            ]
        },
        {
            "before": [
                "<leader>",
                "a"
            ],
            "commands": [
                "workbench.action.showCommands"
            ]
        },
        {
            "before": [
                "<leader>",
                "A"
            ],
            "after": [
                "g",
                "g",
                "V",
                "G"
            ]
        },
        {
            "before": [
                "<leader>",
                "s"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<leader>",
                "s",
                "r"
            ],
            "commands": [
                "workbench.action.openRecent"
            ]
        },
        {
            "before": [
                "<leader>",
                "s",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "<C-d>"
            ]
        },
        {
            "before": [
                "<leader>",
                "d",
                "d"
            ],
            "commands": [
                "workbench.action.files.newUntitledFile"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<leader>",
                "f"
            ],
            "commands": [
                "workbench.action.findInFiles"
            ]
        },
        {
            "before": [
                "<leader>",
                "F"
            ],
            "commands": [
                "workbench.action.gotoSymbol"
            ]
        },
        {
            "before": [
                "<leader>",
                "g"
            ],
            "commands": [
                "workbench.action.gotoSymbol"
            ]
        },
        {
            "before": [
                "<leader>",
                "h"
            ],
            "commands": [
                "editor.action.commentLine"
            ]
        },
        {
            "before": [
                "<leader>",
                "H"
            ],
            "commands": [
                "workbench.action.splitEditorDown"
            ]
        },
        {
            "before": [
                "<leader>",
                "j"
            ],
            "commands": [
                "bookmarks.jumpToNext"
            ]
        },
        {
            "before": [
                "<leader>",
                "k"
            ],
            "commands": [
                "bookmarks.jumpToPrevious"
            ]
        },
        {
            "before": [
                "<leader>",
                "l"
            ],
            "commands": [
                "workbench.action.navigateToLastEditLocation"
            ]
        },
        {
            "before": [
                "<leader>",
                ";"
            ],
            "commands": [
                "workbench.action.navigateToLastEditLocation"
            ]
        },
        // Bottom row
        {
            "before": [
                "<leader>",
                "x"
            ],
            "commands": [
                "workbench.action.closeAllEditors"
            ]
        },
        {
            "before": [
                "<leader>",
                "c"
            ],
            "commands": [
                "workbench.panel.chat.view.copilot.focus"
            ]
        },
        {
            "before": [
                "<leader>",
                "v"
            ],
            "after": [
                "v",
                "i",
                "W"
            ]
        },
        {
            "before": [
                "<leader>",
                "V"
            ],
            "commands": [
                "workbench.action.splitEditorRight"
            ]
        },
        {
            "before": [
                "<leader>",
                "b"
            ],
            "after": [
                "%"
            ]
        },
        {
            "before": [
                "<leader>",
                "B"
            ],
            "commands": [
                "workbench.view.extension.bookmarks"
            ]
        },
        {
            "before": [
                "<leader>",
                "n"
            ],
            "commands": [
                "workbench.action.nextEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "m"
            ],
            "commands": [
                "workbench.action.gotoSymbol"
            ]
        },
        {
            "before": [
                "<leader>",
                "M"
            ],
            "commands": [
                "workbench.action.showAllSymbols"
            ]
        },
        {
            "before": [
                "<leader>",
                "."
            ],
            "commands": [
                "editor.debug.action.toggleBreakpoint"
            ]
        },
        {
            "before": [
                "<leader>",
                "/"
            ],
            "commands": [
                ":noh"
            ]
        },
        // G actions (goto)
        {
            "before": [
                "g",
                "e"
            ],
            "commands": [
                "workbench.action.showCommands"
            ]
        },
        {
            "before": [
                "g",
                "u"
            ],
            "commands": [
                "references-view.findReferences"
            ]
        },
        {
            "before": [
                "g",
                "i"
            ],
            "commands": [
                "editor.action.goToImplementation"
            ]
        },
        {
            "before": [
                "g",
                "h"
            ],
            "commands": [
                "workbench.action.openLocalHistory"
            ]
        }
    ],
    // Vim Visual Mode Mappings
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "h"
            ],
            "commands": [
                "editor.action.commentLine"
            ]
        },
        {
            "before": [
                "<leader>",
                "f"
            ],
            "commands": [
                "workbench.action.findInFiles"
            ]
        },
        {
            "before": [
                "<leader>",
                "i"
            ],
            "commands": [
                "inlineChat.start"
            ]
        }
    ],
    // Editor improvements
    "editor.lineNumbers": "relative",
    "editor.cursorBlinking": "solid",
    "editor.formatOnSave": true,
    "files.autoSave": "afterDelay",
    "workbench.editor.enablePreview": false,
    "breadcrumbs.enabled": true,
    "editor.stickyScroll.enabled": false,
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "continue.enableTabAutocomplete": false,
    "editor.codeActionsOnSave": {},
    // Dark theme settings
    "workbench.colorCustomizations": {
        "editor.background": "#000000",
        "sideBar.background": "#000000",
        "activityBar.background": "#000000",
        "terminal.background": "#000000"
    }
}